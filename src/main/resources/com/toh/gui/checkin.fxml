<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.control.cell.*?>
<?import javafx.scene.layout.*?>

<Pane prefHeight="970.0" prefWidth="1200.0" xmlns="http://javafx.com/javafx/16" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.toh.gui.controller.CheckinController">
    <children>
      <VBox prefHeight="850.0" prefWidth="1200.0">
         <children>
            <HBox prefHeight="150.0" prefWidth="1200.0" spacing="10.0">
               <children>
                  <TextField fx:id="nameInput" promptText="Name">
                     <HBox.margin>
                        <Insets />
                     </HBox.margin>
                  </TextField>
                  <Button fx:id="clickOnSearchButton" mnemonicParsing="false" text="Search">
                     <HBox.margin>
                        <Insets right="790.0" />
                     </HBox.margin>
                  </Button>
                  <ComboBox fx:id="roomComboBox" prefWidth="150.0" promptText="Rooms" />
               </children>
               <padding>
                  <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
               </padding>
               <VBox.margin>
                  <Insets />
               </VBox.margin></HBox>
              <TableView fx:id="table" prefHeight="870.0" prefWidth="1200.0">
                  <columns>
                      <TableColumn prefWidth="220.0" text="Name">
                          <cellValueFactory>
                              <PropertyValueFactory property="name" />
                          </cellValueFactory>
                      </TableColumn>
                      <TableColumn minWidth="0.0" prefWidth="217.0" text="Phone N.">
                          <cellValueFactory>
                              <PropertyValueFactory property="phoneNumber" />
                          </cellValueFactory>
                      </TableColumn>
                      <TableColumn prefWidth="178.0" text="Birthday">
                          <cellValueFactory>
                              <PropertyValueFactory property="birthday" />
                          </cellValueFactory>
                      </TableColumn>
                      <TableColumn prefWidth="440.0" text="Address">
                          <cellValueFactory>
                              <PropertyValueFactory property="homeAddress" />
                          </cellValueFactory>
                      </TableColumn>
                      <TableColumn prefWidth="144.0" text="Nationality">
                          <cellValueFactory>
                              <PropertyValueFactory property="nationality" />
                          </cellValueFactory>
                      </TableColumn>
                  </columns>
              </TableView>
            <HBox alignment="CENTER_LEFT" prefHeight="50.0" prefWidth="1200.0" spacing="10.0">
               <children>
                  <TextField fx:id="name" promptText="Name" />
                  <TextField fx:id="phoneNumber" layoutX="10.0" layoutY="10.0" promptText="Phone Number" />
                  <TextField fx:id="birthday" layoutX="10.0" layoutY="10.0" promptText="Birthday" />
                  <TextField fx:id="address" layoutX="159.0" layoutY="10.0" promptText="Address" />
                  <TextField fx:id="nationality" layoutX="159.0" layoutY="10.0" promptText="Nationality" />
                  <Button mnemonicParsing="false" onAction="#ClickOnAddCheckIn" text="Add" />
                  <Button fx:id="delete" mnemonicParsing="false" onAction="#clickOnDeleteCheckIn" text="Delete" />
               </children>
               <opaqueInsets>
                  <Insets left="100.0" />
               </opaqueInsets>
               <padding>
                  <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
               </padding>
            </HBox>
         </children>
      </VBox>
    </children>
</Pane>
